// controllers/liveOccupancyController.js

const { DateTime }     = require('luxon');
const { sql, getPool } = require('../config/db');
const doorZoneMap      = require('../data/doorZoneMap');
const zoneFloorMap     = require('../data/zoneFloorMap');
const ertMembers       = require('../data/puneErtMembers.json');

const warnedKeys = new Set();

function getTodayString() {
  return DateTime.now()
    .setZone('Asia/Kolkata')
    .toFormat('yyyy-LL-dd');
}

function normalizeZoneKey(rawDoor, rawDir) { /* ‚Ä¶unchanged‚Ä¶ */ }
function normalizePersonName(raw) { /* ‚Ä¶unchanged‚Ä¶ */ }
function mapDoorToZone(rawDoor, rawDir) { /* ‚Ä¶unchanged‚Ä¶ */ }

async function fetchNewEvents(since) {
  const pool = await getPool();
  const req  = pool.request();
  req.input('since', sql.DateTime2, since);

  const { recordset } = await req.query(`
    WITH CombinedQuery AS (
      SELECT
        DATEADD(MINUTE, -1 * t1.MessageLocaleOffset, t1.MessageUTC) AS LocaleMessageTime,
        /* ‚Ä¶other fields‚Ä¶ */
      FROM [ACVSUJournal_00010027].[dbo].[ACVSUJournalLog] t1
      /* ‚Ä¶joins‚Ä¶ */
      WHERE
        t1.MessageType       = 'CardAdmitted'
        AND t1.PartitionName2 = 'APAC.Default'
        -- <<< changed here from >= to >
        AND DATEADD(MINUTE, -1 * t1.MessageLocaleOffset, t1.MessageUTC) > @since
    )
    SELECT
      LocaleMessageTime,
      /* ‚Ä¶convert/dateonly/swipe_time‚Ä¶ */
    FROM CombinedQuery
    ORDER BY LocaleMessageTime ASC;
  `);

  return recordset;
}

// buildOccupancy, buildVisitedToday, etc. ‚Ä¶ all unchanged ‚Ä¶

exports.getLiveOccupancy = async (req, res) => {
  try {
    await getPool();
    res.writeHead(200, {
      'Content-Type':  'text/event-stream',
      'Cache-Control': 'no-cache',
      'Connection':    'keep-alive'
    });
    res.write('\n');

    let lastSeen = new Date(Date.now() - 24 * 60 * 60 * 1000);
    const events = [];

    const push = async () => {
      // prune events not from today
      /* ‚Ä¶unchanged‚Ä¶ */

      const fresh = await fetchNewEvents(lastSeen);
      if (fresh.length) {
        lastSeen = fresh[fresh.length - 1].LocaleMessageTime;
        events.push(...fresh);
      }

      const occupancy  = await buildOccupancy(events);
      const todayStats = buildVisitedToday(events);

      occupancy.totalVisitedToday = todayStats.total;
      occupancy.visitedToday      = { /* ‚Ä¶ */ };

      // <<< keep the unique id + flush
      const sid = Date.now();
      res.write(`id: ${sid}\n`);
      res.write(`data: ${JSON.stringify(occupancy)}\n\n`);
      if (typeof res.flush === 'function') res.flush();
    };

    await push();
    const timer = setInterval(push, 2000);
    req.on('close', () => clearInterval(timer));
  } catch (err) {
    console.error('Live occupancy SSE error:', err);
    if (!res.headersSent) res.status(500).json({ error: 'Internal Server Error' });
  }
};





